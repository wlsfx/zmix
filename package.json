    "bcryptjs": "^3.0.3",
    "bs58": "^6.0.0",
    "bullmq": "^5.63.0",
    "circomlibjs": "^0.1.7",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.1",
    "ffjavascript": "^0.3.1",
    "ioredis": "^5.8.2",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "snarkjs": "^0.7.5",
